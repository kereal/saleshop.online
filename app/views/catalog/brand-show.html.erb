<h1><%= @brand.title %></h1>

<div class="brand-about">
  <% if @brand.image.exists? %>
    <div class="image"><%= image_tag @brand.image(:medium) %></div>
  <% end %>
  <%= raw @brand.description %>
</div>

<%= render "catalog/products-list" %>



<style>
  .brand-about {
    margin-bottom: 52px;
    }
    .brand-about .image {
      float: right;
      margin: 30px 60px 60px;
      }
      .brand-about .image > img {
        max-width: 240px;
        }
</style>