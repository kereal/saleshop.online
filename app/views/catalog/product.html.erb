<div class="product">

<div class="category">
  <%= link_to @product.category.title, @product.category %>
</div>

<h1><%= @product.title %></h1>

<div class="row">
  <div class="col-sm-4">
    <div class="images">
      <% @product.images.each do |image| %>
        <%= link_to image_tag(image.image), image.image.url %>
      <% end %>
    </div>    
  </div>
  <div class="col-sm-8">
    <div class="brand">
      <%= link_to image_tag(@product.brand.image(:medium)), @product.brand %>
    </div>
    <div class="price">
      <%= number_to_currency @product.price, precision: 0 %>
      <% if @product.old_price %><s><%= number_to_currency @product.old_price, precision: 0 %></s><% end %>
    </div>
    <%= link_to cart_add_path(@product.id) do %>
      <button>В корзину</button>
    <% end %>
    <div class="description">
      <%= @product.description.html_safe %>
    </div>
  </div>
</div>

</div>


<style>

  .product .images {
    }
    .product .images img {
      width: 100%
      }
  .product .price {
    font-size: 24px;
    margin: 10px;
    font-weight: bold;
    color: #ad1d22;
    }
    .product .price > s {
      font-weight: normal;
      font-size: 16px;
      color: #666;
      }
</style>
