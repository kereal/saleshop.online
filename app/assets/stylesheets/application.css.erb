body {
  font-family: 'Roboto', sans-serif;
  }

a:hover { text-decoration: none; }
a:active, a:focus { text-decoration: none; }

h1, h2, h3 {
  margin-bottom: .4em;
  }

h1 {
  font-size: 32px;
  margin-bottom: .6em;
  margin-top: .3em;
  }

.turbolinks-progress-bar {
  background-color: #000;
  height: 1px;
  }

.container {
  min-width: 992px;
  }

#header {
  padding: 20px 0;
  }
  #header .logo {
    float: left;
    width: 20%;
    margin-right: 2%;
    }
    #header .logo img {
      width: 100%;
      }
  #header .features {
    float: left;
    width: 38%;
    margin: 0 14% 0 0;
    padding: 0;
    list-style: none;
    position: relative;
    top: 3px;
    }
    #header .features > li {
      width: 33.3333%;
      float: left;
      text-align: center;
      }
      #header .features > li > a {
        font-size: 13px;
        color: #222;
        }
        #header .features > li > a > .icon {
          margin: 0 auto;
          }
      #header .features .mag > .icon {
        width: 34px;
        height: 25px;
        background: url(<%= asset_path "icons.png" %>) no-repeat;
        background-position: 0 0;
        margin-bottom: 1px;
        }
      #header .features .delivery > .icon {
        width: 30px;
        height: 19px;
        background: url(<%= asset_path "icons.png" %>) no-repeat;
        background-position: 0 -25px;
        margin-top: 5px;
        margin-bottom: 2px;
        }
      #header .features .sales > .icon {
        width: 46px;
        height: 15px;
        background: url(<%= asset_path "icons.png" %>) no-repeat;
        background-position: 0 -44px;
        margin-top: 8px;
        margin-bottom: 3px;
        }
  #header .right {
    float: left;
    width: 26%;
    }
    #search-main {
      float: left;
      position: relative;
      width: 75%;
      top: 13px;
      }
      #search-main input {
        width: 100%;
        border: 1px solid #ccc;
        padding: 2px 5px;
        outline: none;
        }
      #search-main button {
        width: 13px;
        height: 13px;
        position: absolute;
        top: 6px;
        right: 6px;
        border: 0;
        outline: none;
        background: url(<%= asset_path "icons.png" %>) 0 -98px no-repeat;
        }
    #header .right > .cart {
      float: right;
      position: relative;
      color: #222;
      bottom: -29px;
      font-size: 13px;
      }
    #header .right > .cart::before {
      content: "";
      position: absolute;
      width: 23px;
      height: 23px;
      left: 13px;
      top: -24px;
      background: url(<%= asset_path "icons.png" %>) 0 -59px no-repeat;
      }
      #header .right > .cart > .count {
        position: absolute;
        top: -26px;
        right: 0;
        width: 19px;
        height: 19px;
        background: #ea0000;
        color: #fff;
        font-size: .9em;
        border-radius: 50%;
        text-align: center;
        line-height: 20px;
        letter-spacing: -.1px;
        }


#mainmenu {
  margin-bottom: 4px;
  }
  #mainmenu > ul {
    width: 100%;
    margin: 0;
    padding: 0;
    list-style: none;
    display: table;
    font-size: 1em;
    }
  #mainmenu > ul > li {
    display: table-cell;
    text-align: center;
    width: 16.666%;
    position: relative;
    }
  #mainmenu > ul > li .pop {
    display: none;
    width: 120%;
    padding: 16px 21px;
    background: #fff;
    position: absolute;
    text-align: left;
    border: 1px solid #666;
    border-top: 0;
    z-index: 200;
    }
    #mainmenu > ul > li .pop a {
      display: block;
      width: 100%;
      color: #111;
      margin-bottom: 2px;
      }
    #mainmenu > ul > li .pop a:hover {
      text-decoration: underline;
      }
    #mainmenu > ul > li > a {
      display: block;
      /*padding: 3px 0 2px;*/
      padding: 5px 0 4px;
      color: #fff;
      background: #000;
      text-transform: uppercase;
      letter-spacing: .08em;
      font-size: .81em;
      }
    #mainmenu > ul > li > a:hover {
      background: #333;
      }

#brandmenu {
  margin-bottom: 24px;
  }
  #brandmenu > ul {
    width: 100%;
    margin: 0;
    padding: 0;
    list-style: none;
    display: table;
    }
    #brandmenu > ul > li {
      display: table-cell;
      text-align: center;
      min-width: 36px;
      position: relative;
      }
    #brandmenu > ul > li:hover {
      background: #f0f0f0;
      }
      #brandmenu > ul > li:hover > a {
        color: #888;
        }
    #brandmenu > ul > li:first-child {
      width: 13.7%;
      }
      #brandmenu > ul > li > a {
        display: block;
        width: 100%;
        color: #bbb;
        margin-top: 1px;
        }
    #brandmenu > ul > li .sub {
      display: none;
      position: absolute;
      padding: 16px 21px;
      background: #fff;
      position: absolute;
      text-align: left;
      border: 1px solid #666;
      border-top: 0;
      z-index: 200;
      min-width: 120px;
      }
      #brandmenu > ul > li .sub a {
        display: block;
        width: 100%;
        color: #111;
        margin-bottom: 2px;
        white-space: nowrap;
        }
      #brandmenu > ul > li .sub a:hover {
        text-decoration: underline;
        }

  
.breadcrumbs {}


.pagination {
  border-radius: 0;
  margin: 44px 0 0;
  }
  .pagination > li > a {
    border: 0;
    padding: 5px 11px;
    color: #333;
    line-height: 1.428;
    }
  .pagination > li:first-child > a, .pagination > li:first-child > span,
  .pagination > li:last-child > a, .pagination > li:last-child > span {
    border-radius: 0;
    }
  .pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover, .pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus {
    background-color: #000;
    border-color: #000;
    }
  .pagination > li > a:hover, .pagination > li > span:hover, .pagination > li > a:focus, .pagination > li > span:focus {
    color: inherit;
    }


#footer {
  color: #888;
  border-top: 1px solid #eee;
  text-align: right;
  padding: 1%;
  margin-top: 69px;
  }


.center { text-align: center; }


/* немного уменьшенная версия по ширине и увеличенными шрифтами */
@media (max-width: 1200px) {
  body {
    font-size: 18px;
    }
  #header .logo {
    width: 24%;
    margin-right: 1%;
    position: relative;
    top: 2px;
    }
  #brandmenu > ul > li {
    min-width: 31px;
    }
  #header .features {
    width: 41%;
    margin-right: 8%;
    letter-spacing: -.1px;
    }
  .products > .product {
    margin-right: .5%;
    margin-left: .5%;
    margin-bottom: 1%;
    width: 24%;
    }
  .products > .product:nth-child(5n) {
    margin-right: .5%;
    }
  }

